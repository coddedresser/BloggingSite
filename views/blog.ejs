!<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/scripts') %>
    <%- include('./partials/nav') %>
    <div class="container mt-5">
  <h1><%= blog.title %></h1>
  <img src="<%= blog.coverImageURL %>" class="img-fluid mb-3">
  <p class="text-muted">By <img src="<%= blog.createdBy.profileImageURL %>" width="30" class="rounded-circle"> <%= blog.createdBy.fullName %></p>
  <p><%= blog.body %></p>

  <hr>
  <h4>Comments (<%= comments.length %>)</h4>
  <% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="post" class="mb-3">
      <textarea class="form-control" name="content" rows="2" placeholder="Add your comment..."></textarea>
      <button class="btn btn-secondary mt-2">Comment</button>
    </form>
  <% } %>

  <% comments.forEach(comment => { %>
    <div class="mb-2">
      <strong><img src="<%= comment.createdBy.profileImageURL %>" width="30" class="rounded-circle"> <%= comment.createdBy.fullName %></strong>
      <p class="mb-1"><%= comment.content %></p>
    </div>
  <% }) %>
</div>

    
</body>
</html>